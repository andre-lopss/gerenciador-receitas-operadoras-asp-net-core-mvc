@model GerenciadorDeOperadorasMVC.Models.ViewModels.BeneficiarioFormularioViewModel
@{
    ViewData["Title"] = "Editar";
}

<h2>@ViewData["Title"]</h2>

<h4>Beneficiário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Beneficiario.Id" />
            <div class="form-group">
                <label asp-for="Beneficiario.Nome" class="control-label"></label>
                <input asp-for="Beneficiario.Nome" class="form-control" />
                <span asp-validation-for="Beneficiario.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Beneficiario.Email" class="control-label"></label>
                <input asp-for="Beneficiario.Email" class="form-control" />
                <span asp-validation-for="Beneficiario.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Beneficiario.Aniversario" class="control-label"></label>
                <input asp-for="Beneficiario.Aniversario" class="form-control" />
                <span asp-validation-for="Beneficiario.Aniversario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Beneficiario.ValorPlano" class="control-label"></label>
                <input asp-for="Beneficiario.ValorPlano" class="form-control" />
                <span asp-validation-for="Beneficiario.ValorPlano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Beneficiario.OperadoraId" class="control-label"></label>
                <select asp-for="Beneficiario.OperadoraId" asp-items="@(new SelectList(Model.Operadoras,"Id", "Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}