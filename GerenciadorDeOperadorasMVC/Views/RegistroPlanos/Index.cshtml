@{
    ViewData["Title"] = "REGISTRO DE PLANOS";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaSimples">
            <fieldset>
                <legend>Busca símples</legend>
                <div class="form-group">
                    <label for="dataMinima" class="col-lg-2 control-label">Data mínima</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataMinima" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="dataMaxima" class="col-lg-2 control-label">Data máxima</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataMaxima" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Pesquisar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaAgrupada">
            <fieldset>
                <legend>Busca agrupada</legend>
                <div class="form-group">
                    <label for="dataMinima" class="col-lg-2 control-label">Data mínima</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataMinima" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="dataMaxima" class="col-lg-2 control-label">Data máxima</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataMaxima" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Pesquisar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>